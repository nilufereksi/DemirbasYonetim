@model IEnumerable<DemirbasYonetim.Models.Category>

@{
    ViewData["Title"] = "Kategoriler";
}

<div class="container-fluid mt-4">
    <div class="card shadow border-0">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="fa-solid fa-layer-group me-2"></i> Kategori Yönetimi</h4>
            <a asp-action="Create" class="btn btn-light text-dark fw-bold btn-sm">
                <i class="fa-solid fa-plus"></i> Yeni Kategori
            </a>
        </div>
        <div class="card-body p-0">
            <table class="table table-hover table-striped align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-4">Kategori Adı</th>
                        <th class="text-end pe-4">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 fw-bold">@item.Name</td>
                            <td class="text-end pe-4">
                                <div class="btn-group">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm"><i class="fa-solid fa-info"></i></a>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm"><i class="fa-solid fa-pen"></i></a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm"><i class="fa-solid fa-trash"></i></a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>