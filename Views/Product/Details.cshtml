@model DemirbasYonetim.Models.Product

@{
    ViewData["Title"] = "Ürün Detayı";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0"><i class="fa-solid fa-circle-info me-2"></i> Demirbaş Kartı</h4>
                    <span class="badge bg-light text-dark">ID: @Model.Id</span>
                </div>

                <div class="card-body">
                    <div class="row mb-4 text-center">
                        <div class="col-12">
                            <h2 class="display-6 text-uppercase fw-bold text-dark">@Model.Name</h2>
                            <p class="text-muted">Ürün Detayları ve Durumu</p>
                            <hr />
                        </div>
                    </div>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="p-3 border rounded bg-light">
                                <label class="small text-muted fw-bold text-uppercase">Fiyat</label>
                                <h4 class="text-success fw-bold mb-0">
                                    <i class="fa-solid fa-tags me-2"></i>@Model.Price ₺
                                </h4>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="p-3 border rounded bg-light">
                                <label class="small text-muted fw-bold text-uppercase">Stok Durumu</label>
                                @if (Model.Stock < 5)
                                {
                                    <h4 class="text-danger fw-bold mb-0">
                                        <i class="fa-solid fa-triangle-exclamation me-2"></i>KRİTİK (@Model.Stock)
                                    </h4>
                                }
                                else
                                {
                                    <h4 class="text-dark fw-bold mb-0">
                                        <i class="fa-solid fa-cubes me-2"></i>@Model.Stock Adet
                                    </h4>
                                }
                            </div>
                        </div>

                        <div class="col-12 mt-3">
                            <div class="p-3 border rounded">
                                <label class="small text-muted fw-bold text-uppercase">Kategori</label>
                                <h5 class="mb-0 text-dark">
                                    <i class="fa-solid fa-layer-group me-2"></i>@Model.Category?.Name
                                </h5>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-footer bg-white d-flex justify-content-between p-3">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fa-solid fa-arrow-left me-1"></i> Listeye Dön
                    </a>

                    @if (User.IsInRole("Admin"))
                    {
                        <div class="btn-group">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning text-white shadow-sm">
                                <i class="fa-solid fa-pen me-1"></i> Düzenle
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>