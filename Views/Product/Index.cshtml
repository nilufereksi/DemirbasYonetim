@model IEnumerable<DemirbasYonetim.Models.Product>

@{
    ViewData["Title"] = "Demirbaş Listesi";
}

<div class="container-fluid mt-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary"><i class="fa-solid fa-boxes-stacked"></i> Demirbaş Listesi</h2>
        <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm">
            <i class="fa-solid fa-plus"></i> Yeni Ürün Ekle
        </a>
    </div>

    @if (TempData["Basarili"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fa-solid fa-check-circle me-2"></i> @TempData["Basarili"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow border-0">
        <div class="card-body p-0">
            <table class="table table-hover table-striped align-middle mb-0">
                <thead class="table-dark">
                    <tr>
                        <th class="ps-4">Ürün Adı</th>
                        <th>Fiyat</th>
                        <th>Stok</th>
                        <th>Kategori</th>
                        <th class="text-end pe-4">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 fw-bold">@item.Name</td>
                            <td>@item.Price ₺</td>
                            <td>
                                @if (item.Stock < 5)
                                {
                                    <span class="badge bg-danger">Kritik: @item.Stock</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">@item.Stock Adet</span>
                                }
                            </td>
                            <td>@item.Category?.Name</td>
                            <td class="text-end pe-4">
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm">
                                        <i class="fa-solid fa-info-circle"></i> Detay
                                    </a>

                                    @if (User.IsInRole("Admin"))
                                    {
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm">
                                            <i class="fa-solid fa-pen"></i> Düzenle
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">
                                            <i class="fa-solid fa-trash"></i> Sil
                                        </a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="card-footer bg-light text-muted small ps-4">
            Toplam <strong>@Model.Count()</strong> ürün listeleniyor.
        </div>
    </div>
</div>