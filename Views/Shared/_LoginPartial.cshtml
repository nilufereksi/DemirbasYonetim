@using System.Security.Claims

<ul class="navbar-nav ms-auto">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <span class="nav-link text-white fw-bold" style="cursor: default;">
                <i class="fa-solid fa-user-circle me-1"></i> Merhaba, @User.Identity.Name
            </span>
        </li>
        <li class="nav-item ms-2">
            <a class="nav-link btn btn-outline-light btn-sm text-white px-3" asp-controller="Account" asp-action="Logout">
                <i class="fa-solid fa-right-from-bracket"></i> Çıkış
            </a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-white" asp-controller="Account" asp-action="Login">
                <i class="fa-solid fa-right-to-bracket me-1"></i> Giriş Yap
            </a>
        </li>
    }
</ul>